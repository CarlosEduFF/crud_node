
<div class="w-full mx-auto my-12 p-8 bg-white rounded-lg shadow-md">
     <!-- Buttons -->
    <div class="flex justify-left space-x-4">
      <a href="/" 
         class="px-6 py-3 bg-gray-300 text-gray-800 font-medium rounded-lg hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-all flex items-center">
        <i class="fas fa-arrow-left mr-2"></i> Voltar
      </a>
    </div>
  <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Agendamento de Consulta</h2>
  {{#if mensagem}}
  <div class="w-full mx-auto my-4 p-4 bg-green-100 border border-green-400 text-green-800 rounded-lg">
    <p class="font-semibold">{{mensagem}}</p>
  </div>
{{/if}}
  <form action="/cadastrar" method="POST" class="space-y-6">
    <!-- Personal Info Section -->
    <div class="border-b border-gray-200 pb-6">
      <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
        <i class="fas fa-user-circle text-red-700 mr-2"></i> Dados Pessoais
      </h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label for="nome" class="block text-sm font-medium text-gray-700 mb-1">Nome Completo</label>
          <input type="text" id="nome" name="nome" 
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all">
        </div>
        
        <div>
          <label for="telefone" class="block text-sm font-medium text-gray-700 mb-1">Telefone</label>
          <input type="text" id="telefone" name="telefone" 
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all">
        </div>
        
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">E-mail</label>
          <input type="email" id="email" name="email" 
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all">
        </div>
        
        <div>
          <label for="origem" class="block text-sm font-medium text-gray-700 mb-1">Origem</label>
          <select id="origem" name="origem" 
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all">
            <option value="celular" selected>Celular</option>
            <option value="telfixo">Telefone Fixo</option>
            <option value="whatsapp">Whatsapp</option>
          </select>
        </div>
      </div>
    </div>
    
    <!-- Appointment Info Section -->
    <div class="pb-6">
      <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
        <i class="fas fa-calendar-alt text-red-700 mr-2"></i> Informações do Agendamento
      </h3>
      
      <div class="space-y-4">
        <div>
          <label for="datCont" class="block text-sm font-medium text-gray-700 mb-1">Data do Contato</label>
          <input type="date" id="datCont" name="datCont" 
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all">
        </div>
        
        <div>
          <label for="observ" class="block text-sm font-medium text-gray-700 mb-1">Observações</label>
          <input type="text" id="observ" name="observ" 
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all">
        </div>
      </div>
    </div>
    
    <!-- Submit Button -->
    <div class="flex justify-center">
      <button type="submit" 
              class="px-6 py-3 bg-red-700 text-white font-medium rounded-lg hover:bg-red-800 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-all">
        <i class="fas fa-calendar-check mr-2"></i> Agendar Consulta
      </button>
    </div>
  </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
